{
    "version": "2.0.0",
    "tasks": [
        {
            "type": "shell",
            "label": "shell: clang++-6.0 build (C++17)",
            "command": "/usr/bin/clang++-6.0",
            "args": [
                "-g",
                "${fileDirname}/*.cpp",
                "-o",
                "${fileDirname}/run.exe",
                "-lSDL2",
                "-lSDL2_ttf",
                "-std=c++17"
            ],
            "options": {
                "cwd": "/usr/bin"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            }
        }
    ]
}